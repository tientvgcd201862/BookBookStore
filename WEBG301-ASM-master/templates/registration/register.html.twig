{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-md col-md-4 col-md-offset-4">
        <h1>Register</h1>
        {{ form_start(registrationForm, { 'attr' : { 'class': 'form-control' } }) }}
        {{ form_row(registrationForm.Name) }} 
        {{ form_row(registrationForm.PhoneNum) }}  
        {{ form_row(registrationForm.Email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.role)}}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-primary btn-sm">Register</button>
        Already have an account ?
        <a href="{{ path('app_login') }}" class="btn btn-primary btn">Login</a>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

